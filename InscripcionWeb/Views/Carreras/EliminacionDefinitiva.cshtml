@model InscripcionWeb.Models.Carrera

@{
    ViewData["Title"] = "EliminacionDefinitiva";
}

<h1>Eliminación Definitiva</h1>

<h3>¿Estas seguro/a que quiere eliminar de forma definitiva esta Carrera?</h3>
<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
    
    <form asp-action="EliminacionDefinitiva">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminación definitiva" class="btn btn-danger" /> |
        <a asp-action="IndexEliminados">Volver a la lista</a>
    </form>
</div>
